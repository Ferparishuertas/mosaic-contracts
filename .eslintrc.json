{
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "no-console": "off",
    "no-underscore-dangle": "off",
    "no-plusplus": "off",
    "no-await-in-loop": "off",
    "import/no-extraneous-dependencies": "off",
    "max-len": [
      "error",
      79
    ]
  },
  "env": {
    "mocha": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "artifacts": false,
    "contract": false,
    "assert": false
  }
}
