    "assert": "1.4.1",
    "bn.js": "4.11.8",
    "chai": "4.2.0",
    "colors": "1.3.3",
    "crypto": "1.0.1",
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.17.2",
    "eslint-plugin-json": "1.4.0",
